import telebot
import os
import time

TOKEN = os.environ.get('BOT_TOKEN')
bot = telebot.TeleBot(TOKEN)

@bot.message_handler(commands=['start'])
def start(message):
    bot.reply_to(message, "‚úÖ XO Arena Bot —Ä–∞–±–æ—Ç–∞–µ—Ç 24/7! üöÄ\n\n/play - –Ω–∞—á–∞—Ç—å –∏–≥—Ä—É")

@bot.message_handler(commands=['play'])
def play(message):
    bot.reply_to(message, "üéÆ –ò–≥—Ä–∞ —Å–∫–æ—Ä–æ –±—É–¥–µ—Ç!\n–°–µ–π—á–∞—Å –±–æ—Ç —Ä–∞–±–æ—Ç–∞–µ—Ç –Ω–∞ Render!")

@bot.message_handler(func=lambda m: True)
def echo(message):
    bot.reply_to(message, f"–¢—ã –Ω–∞–ø–∏—Å–∞–ª: {message.text}")

print("ü§ñ –ë–æ—Ç –∑–∞–ø—É—â–µ–Ω –Ω–∞ Render!")
while True:
    try:
        bot.polling(none_stop=True, interval=1, timeout=60)
    except Exception as e:
        print(f"‚ö†Ô∏è –û—à–∏–±–∫–∞: {e}")
        time.sleep(10)
